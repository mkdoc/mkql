{
  "name": "mkql",
  "version": "1.0.1",
  "description": "Query language for markdown documents",
  "author": "muji",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mkdoc/mkql.git"
  },
  "bugs": {
    "url": "https://github.com/mkdoc/mkql/issues"
  },
  "keywords": [
    "markdown",
    "commonmark",
    "ast",
    "transform",
    "stream",
    "selector",
    "query",
    "html",
    "css"
  ],
  "dependencies": {
    "mkast": "~1.2.10",
    "through3": "~1.1.6"
  },
  "devDependencies": {
    "chai": "~3.5.0",
    "coveralls": "~2.11.8",
    "istanbul": "~0.4.2",
    "mkast": "~1.2.8",
    "mktransform": "~1.0.5",
    "mocha": "~2.4.5"
  },
  "scripts": {
    "lint": "jshint . && jscs .",
    "clean": "rm -rf coverage",
    "pretest": "rm -rf target && mkdir target",
    "test": "NODE_ENV=test mocha ${SPEC:-test/spec}",
    "precover": "npm run pretest",
    "cover": "NODE_ENV=test istanbul cover _mocha -- ${SPEC:-test/spec}",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js"
  },
  "config": {
    "man": {
      "example": true
    }
  }
}
